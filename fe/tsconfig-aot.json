{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "suppressImplicitAnyIndexErrors": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": ["es2015", "dom"],
        "noImplicitAny": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "files": [
        "src/app/app.module.ts",
        "src/main.ts"
    ],
    "angularCompilerOptions": {
        "genDir": "./aot",
        "debug": false,
        "skipMetadataEmit": true
    }


}
